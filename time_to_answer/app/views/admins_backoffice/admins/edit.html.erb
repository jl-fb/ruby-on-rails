<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editando Administradores</h1>
  </div>
</div>
<div class="row">
  <% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @admin.errors.full_messages.each do |item| %>
      <li><%= item %></li>
      <% end %>
    </ul>
  </div>
  <% end%>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Basic Elements
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">

            <%= form_with(model: [:admins_backoffice, @admin], local: true) do |f| %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control", placeholder: "Digite o email"%>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.text_field :password, class: "form-control", placeholder: "Digite a senha" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Confirme a senha" %>
            </div>

            <button class="btn btn-default" type="submit">Editar</button>
            <% end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>